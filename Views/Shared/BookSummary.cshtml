@model Book

<div class="card card-outline-white bg-white text-black-50 m-1 p-1">
    <div class="p-1 text-black-50">
        <h4>
            Book Title: @Model.Title
            <span class="badge badge-pill badge-warning text-center" style="float:right">
                <p>Price: $@Model.Price</p>
            </span>
        </h4>
        <p>Publisher: @Model.Publisher</p>
        <p>ISBN: @Model.ISBN</p>
        <p>Author: @Model.AuthorLastName, @Model.AuthorFirstName</p>
        <p>Fiction? @Model.Fiction</p>
        <p>Genre: @Model.Genre</p>
        <div class="card-text p-1">
            <p>Pages: @Model.Pages</p>
        </div>
    </div>
    <form id="@Model.BookId" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p-1">
            
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Purchase
            </button>
        </span>

    </form>
</div>